<UserControl x:Class="RoboRally.BoardRow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RoboRally"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid x:Name="columns">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
            
        <local:BoardTile x:Name="Col0" Grid.Column="0"/>
        <local:BoardTile x:Name="Col1" Grid.Column="1"/>
        <local:BoardTile x:Name="Col2" Grid.Column="2"/>
        <local:BoardTile x:Name="Col3" Grid.Column="3"/>
        <local:BoardTile x:Name="Col4" Grid.Column="4"/>
        <local:BoardTile x:Name="Col5" Grid.Column="5"/>
        <local:BoardTile x:Name="Col6" Grid.Column="6"/>
        <local:BoardTile x:Name="Col7" Grid.Column="7"/>
        <local:BoardTile x:Name="Col8" Grid.Column="8"/>
        <local:BoardTile x:Name="Col9" Grid.Column="9"/>
        <local:BoardTile x:Name="Col10" Grid.Column="10"/>
        <local:BoardTile x:Name="Col11" Grid.Column="11"/>
    </Grid>
</UserControl>
