<Window x:Class="RoboRally.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:RoboRally"
        Title="MainWindow" Width="400" Height="600">
    <Grid Name="mainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <local:Board x:Name="Board0" Grid.Row="0"/>
        <local:PlayArea x:Name="playArea" ClickedReadyHandler="ClickedReady" Grid.Row="1"/>
    </Grid>
</Window>
